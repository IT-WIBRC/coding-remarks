{
  "name": "coding-remarks",
  "version": "1.0.0",
  "description": "A personal compendium of coding best practices, architectural guidelines, and valuable development remarks gathered across various programming languages and frameworks, including JavaScript, TypeScript, React, Vue.js, and more. This repository aims to foster consistent, maintainable, and testable code.",
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .js,.ts,.vue,.md",
    "lint:fix": "eslint . --ext .js,.ts,.vue,.md --fix"
  },
  "keywords": [
    "remarks",
    "coding",
    "best practices",
    "architecture",
    "guidelines",
    "development",
    "web development",
    "software engineering",
    "programming",
    "code quality",
    "maintainable code",
    "testable code",
    "consistent code"
  ],
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-markdown": "^5.1.0",
    "eslint-plugin-vue": "^10.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2"
  },
  "dependencies": {
    "prettier": "^3.5.3",
    "prettier-plugin-jsdoc": "^1.3.2"
  },
  "lint-staged": {
    "*.{js,ts,vue,md}": "npm run lint:fix -- --",
    "*": "prettier --write --ignore-unknown"
  }
}
